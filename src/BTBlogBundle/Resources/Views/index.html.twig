{% extends "layout.html.twig" %}

{% block bundle_body %}

<div class="row">
    <div class="panel-group padding-gp">
        <div class="col-lg-6 padding-int">
            <div class="panel panel-default" id="Thomas_home_panel">
                <div class="panel-heading"><a href="#" data-toggle="tooltip" data-placement="right" title="Thomas study at ESIEA.
                He like music and make some. He is also passionated by Japanese culture.">Thomas</a></div>
                <div class="panel-body">Music made or recommended by Thomas
                    <br>
                        {% for article in articlesT %}
                            <div class="title_date"><a href={{ path('bt_blog_viewArticle',{'id':article.id}) }}>{{ article.title }}</a> {{ article.date }}</div>
                            <div class="well col-md-12">
                                {% if medias is not empty %}
                                    {% for media in medias %}
                                        {% if media.articles is same as(article) %}
                                            <div class="embed-responsive embed-responsive-16by9">
                                                <iframe class="embed-responsive-item" src="https://www.youtube.com/{{ media.link }}" allowfullscreen></iframe>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                <div class="article_content">{{ article.content }}</div>
                            </div>
                        {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-6 padding-int">
            <div class="panel panel-default" id="Benjamin_home_panel">
                <div class="panel-heading"><a href="#" data-toggle="tooltip" data-placement="right" title="Benjamin study at ESIEA.
                He like to make video about his travels.">Benjamin</a></div>
                <div class="panel-body">Video made by Benjamin
                    <br>
                    {% for article in articlesB %}
                        <div class="title_date"><a href={{ path('bt_blog_viewArticle',{'id':article.id}) }}>{{ article.title }}</a> {{ article.date }}</div>
                        <div class="well">
                                {% if medias is not empty %}
                                    {% for media in medias %}
                                        {% if media.articles is same as(article) %}
                                            <div class="embed-responsive embed-responsive-16by9">
                                                <iframe class="embed-responsive-item" src="https://www.youtube.com/{{ media.link }}" allowfullscreen></iframe>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}

                            <div class="article_content">{{ article.content }}</div>
                        </div>
                    {% endfor %}
                </div>
        </div>
    </div>
</div>



{% endblock %}