{% extends "layout.html.twig" %}
{% block bundle_body %}

    {%  stylesheets '@BTBlogBundle/Resources/public/css/article.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
    <div class="row">
        <div class="col-sm-8">
            <div class="article_title">
                {{ article.title }}
                <a id="delButton" href="{{ path('bt_blog_rmArticle',{'id':article.id}) }}" class="btn btn-info btn-lg pull-right" role="button">Delete</a>
                <hr />
            </div> <br>
            <div class="article_page_content">
                {{ article.content }}
                <br>
                <br>
                {% for media in media %}
                    <iframe width="420" height="236" src="https://www.youtube.com/{{ media.link }}" frameborder="0" allowfullscreen></iframe>
                    <br>
                    <br>
                {% endfor %}
            </div>
                {{ article.date }}

            <br>
        </div>

        <div class="col-sm-4">
            <div> {{ include("viewCommentary.html.twig") }}</div>
        </div>
    </div>
{% endblock %}